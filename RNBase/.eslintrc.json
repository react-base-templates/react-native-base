{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"extends": "airbnb",
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": ["react", "jsx-a11y", "import"],
	"rules": {
		"react/prop-types": 1,
		"indent": ["error", "tab"],
		"no-tabs": 0,
		"react/jsx-indent": ["error", "tab"],
		"react/jsx-indent-props": ["error", "tab"],
		"react/jsx-filename-extension": [
			1,
			{
				"extensions": [".js", ".jsx"]
			}
		],
		"no-use-before-define": [
			"error",
			{
				"variables": false
			}
		],
		"quotes": [
			2,
			"double",
			{
				"avoidEscape": true
			}
		],
		"object-curly-newline": [
			"error",
			{
				"ObjectPattern": {
					"multiline": true
				},
				"ImportDeclaration": "never",
				"ExportDeclaration": {
					"multiline": true,
					"minProperties": 3
				}
			}
		],
		"linebreak-style": 0,
		"import/prefer-default-export": "off",
		"arrow-body-style": 0,
		"react/destructuring-assignment": 0,
		"object-curly-newline": 0,
		"import/no-unresolved": 0,
		"global-require": 0
	}
}
